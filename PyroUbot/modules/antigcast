@PY.UBOT("status")
async def checkstatus(client, message):
    cek = await get_blacklist_status(client.me.id)
    if cek == True:
        await message.reply_text(f"{dn}<b>á´€É´á´›ÉªÉ¢á´„á´€êœ±á´› êœ±á´œá´…á´€Êœ á´…Éª á´€á´‹á´›Éªêœ°á´‹á´€É´</b>", quote=True)
